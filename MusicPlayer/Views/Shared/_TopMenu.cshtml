@{
    MusicPlayer.Models.User user = (MusicPlayer.Models.User)HttpContext.Current.Session["UserProfile"];
    if (user != null)
    {
        <div class="col-md-4">
            <form id="searchAlbumSong" class="navbar-form" role="search" method="post" action="/Album/Search">
                <div class="input-group">
                    <input type="text" id="query" class="form-control" placeholder="Search for Album & Song" name="query">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            </form>
        </div>
        <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> @user.name <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="/Album/Albums"><i class="fa fa-fw fa-film"></i> Album</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/User/Logout"><i class="fa fa-fw fa-power-off"></i> Log Out</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
    else
    {
         <!-- Top Menu Items -->
        <ul class="nav navbar-right top-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Guest <b class="caret"></b></a>
                <ul class="dropdown-menu">
                    <li>
                        <a href="/User/Index"><i class="fa fa-fw fa-plus"></i> Register</a>
                    </li>
                    <li class="divider"></li>
                    <li>
                        <a href="/User/Login"><i class="fa fa-fw fa-edit"></i> Log In</a>
                    </li>
                </ul>
            </li>
        </ul>
    }
}
